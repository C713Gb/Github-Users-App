<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:elevation="6dp"
    android:paddingStart="20dp">

    <TextView
        android:id="@+id/repo_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="RepoName"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/stars_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stars Count: "
        android:layout_below="@id/repo_name_txt"
        android:textColor="@color/black"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/stars_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repo_name_txt"
        android:layout_toEndOf="@id/stars_count"
        android:padding="10dp"
        android:text="10"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/watchers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stars_count"
        android:text="Watchers: "
        android:padding="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/watchers_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_below="@id/stars_txt"
        android:layout_toEndOf="@id/watchers_count"
        android:text="10"/>

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/watchers_count"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text="Language: "/>

    <TextView
        android:id="@+id/language_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/language"
        android:layout_below="@id/watchers_txt"
        android:text="Python"
        android:padding="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/language"
        android:text="Created at: "
        android:textColor="@color/black"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/created_at_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/language"
        android:layout_toEndOf="@id/created_at"
        android:text="Date"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>